/* pages/create/create.wxss */
page {
  background-color: #FAFAD2;
}

.big {
  border-top-style: solid;
  border-top-color: #000000;
  border-top-width: 1px;
}

.picker {
  position: center;
}

.choose {
  float: right;
  margin-right: 0px;
  background-color: #F0E68C;
}

.img {
  height: 40px;
  margin-top: 5px;
  display: flex;
  margin-left: 25px;
  background-color: red;
}

.text {
  margin-left: 25px;
}

.selection {
  height: 50px;
  margin-top: 50px;
  display: flex;
  background-color: #EEE8AA; 
  border-width: 1px;
  border-bottom-color: #000000;
  border-top-color: #000000;
  border-left-style: none;
  border-right-style: none;
  border-bottom-style: solid;
  border-top-style: solid;
}

.in {
  float: right;
  width: 256px;
  height: 50px;
  border-color: #000000;
  margin-left: 25px;
}

.in_small {
  width: 45px;
  margin-left: 25px;
  text-align: center;
  border-bottom-width: 1px;
  border-bottom-style: dashed;
}

.btn {
  margin-top: 50px;
  background-color: #EEE8AA;
}